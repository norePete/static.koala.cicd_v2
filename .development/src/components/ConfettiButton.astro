---
const { wrapperClass, link, css} = Astro.props;
---

<div id="wrapper" class={wrapperClass}>
<button id="confetti"
	class=`appearance-none ${css} text-white font-semibold rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-opacity-75 z-99`
>
    <a href={link}>
	<slot />
    </a>
</button>
</div>

<script>
	import confetti from 'canvas-confetti';
	const button = document.body.querySelector('#confetti');

	if (button) {
		button.addEventListener('click', () => confetti());
	}
</script>
