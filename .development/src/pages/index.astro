---
// Component Imports
import ConfettiButton from '../components/ConfettiButton.astro';
import Layout from '../layouts/main.astro';
import Canvas from '../components/Canvas.astro';
---

<Layout title="1228247">
    <div class="w-full flex flex-col bg-black">
        <div class="bg-black h-screen w-full flex justify-center">
            <div class="md:m-3 bg-gradient-to-r from-gray-500 to-gray-600 rounded-lg w-full flex flex-col">
                    <div class="bg-transparent flex flex-shrink flex-col md:flex-row items-center">
                            <ConfettiButton css="hidden md:block py-2 px-4" wrapperClass="md:mb-5 md:ml-5 md:mt-5">?</ConfettiButton>
                            <ConfettiButton 
                            css="w-full md:w-auto text-green-500 md:text-white text-2xl md:text-lg bg-black md:bg-transparent hover:bg-gray-700 py-2 px-4" 
                            link='https://explorer.solana.com/' 
                            wrapperClass="w-full md:w-auto md:ml-auto md:mr-5 md:mt-5">Block Explorer</ConfettiButton>
                            <ConfettiButton 
                            css="w-full md:w-auto text-purple-500 md:text-white text-2xl md:text-lg bg-black md:bg-transparent hover:bg-red-900 py-2 px-4" 
                            link='https://phantom.app/download' 
                            wrapperClass="w-full md:w-auto md:mr-5 md:mt-5">download Phantom</ConfettiButton>
                    </div>
                    <div class="bg-transparent w-full flex-shrink md:flex-grow flex-row">
                    </div>
                    <div class="bg-transparent w-full flex flex-grow flex-row items-center justify-center">
                        <h1 class="font-mono text-7xl md:text-9xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-gray-600 to-gray-600 opacity-50">Solana NzD</h1>
                    </div>
                    <div class="bg-transparent w-full flex flex-grow flex-row items-center justify-center">
                        <h1 class="font-mono text-7xl md:text-9xl font-bold text-white">Solana NzD</h1>
                    </div>
                    <div class="bg-transparent w-full flex flex-grow flex-row items-center justify-center">
                        <h1 class="font-mono text-7xl md:text-9xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-gray-500 to-gray-500 opacity-50">Solana NzD</h1>
                    </div>
                    <div class="bg-transparent w-full flex flex-shrink flex-row items-center justify-center">
                    </div>
                    <div class="bg-transparent w-full flex flex-shrink flex-col md:flex-row items-center justify-center">
                            <ConfettiButton 
                            link='https://solana.com/docs' 
                            css="w-full md:w-auto hover:bg-gray-700 bg-grey-600 py-6 px-10 text-2xl" 
                            wrapperClass="w-full md:w-auto md:m-3 md:pb-8">Documentation</ConfettiButton>
                            <ConfettiButton 
                            link='http://1228247.xyz/gateway' 
                            css="w-full md:w-auto bg-red-800 hover:bg-black py-6 px-24 text-4xl"
                            wrapperClass="w-full md:w-auto">Buy</ConfettiButton>
                            <ConfettiButton 
                            link='https://solana.com/' 
                            css="w-full md:w-auto hover:bg-gray-700 bg-grey-600 py-6 px-10 text-2xl" 
                            wrapperClass="w-full md:w-auto md:m-3 md:pb-8">Solana.com</ConfettiButton>
                    </div>
                    <div class="bg-transparent w-full flex-shrink md:flex-grow flex-row">
                    </div>
            </div>
        </div>

        <div class="bg-transparent w-full flex justify-center">
            <div class="bg-transparent justify-center w-full items-center flex grow flex-col">
            <p>footer</p>
            </div>
        </div>
    </div>
</Layout>

